<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- COURSE  FORM VIEW -->
    <record model="ir.ui.view" id="course_form_view">
        <field name="name">course.form</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form string="Course Form">
                <!--HTML VERSION-->   
                <header>
                    <button string="Confirm" type="object" 
                    name="action_confirm" 
                    class="oe_highlight"/>

                    <button string="Mark as done" type="object"
                    name="action_done"  
                    class="oe_highlight"/>

                    <button string="Reset to draft" type="object"
                    name="action_draft" />

                    <!--<field name="state" widget="statusbar"/>-->
                </header>

                <sheet>
                    <div class="oe_title">

                        <label for="name" class="oe_edit_only" 
                        string="Idea Name"/>

                        <field name="name"/>

                        <label for="name" class="oe_edit_only" 
                        string="Choose a Professor"/>

                        <field name="responsible_id"/>
                        
                    </div>
                    <separator string="General" colspan="2"/>
                    <notebook cospan="2" col="2">
                        <page string="description">
                            <field name="description" placeholder="Idea Description..." />
                        </page>
                        <page string="Additional Information">
                            Add additional info here
                        </page>
                        <page string="Courses">
                            <field name="sessions_ids" nolabel="1"> 
                                <tree string="Registered sessions">
                                    <field name="name"/>
                                    <field name="instructor_id" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!--ENDING HTML VERSION--> 


                <!-- XML VERSION -->
               <!-- <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="About">
                            This is an example of pagination
                        </page>
                    </notebook>
                </sheet> -->
                <!-- ENDING XML VERSION -->
            </form>
        </field>
    </record>

    <!-- SESSION FORM VIEW -->
<record model="ir.ui.view" id="session_form_view">
        <field name="name">session.form</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <form string="Session Form">
                <!-- XML VERSION -->
               <sheet>
                    <group>
                        <field name="name" />
                        <field name="start_date" />
                        <field name="duration" />
                        <field name="seats" />
                        <field name="instructor_id" />
                        <field name="course_id" />
                        <label for="attendee_ids"/>
                        <field name="attendee_ids" nolable="1"/>
                    </group>
                </sheet> 
                <!-- ENDING XML VERSION -->
            </form>
        </field>
    </record>
<!-- ENDING SESSION FORM VIEW-->

    <!-- Defining tree view for courses -->
    <record model="ir.ui.view" id="course_list_view">
        <field name="name">course.list</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree string="Course Tree">
                <field name="name" string="Name Tree"/>
                <field name="description" />
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>
    <!-- ENDING TREE VIEW -->

    <!-- Defining tree view for Sessions -->
    <record model="ir.ui.view" id="session_tree_view">
        <field name="name">session.tree</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <tree string="Session Tree">
                <field name="name" string="Name Tree"/>
                <field name="start_date"/>
                <field name="duration" />
                <field name="seats" />
                <field name="instructor_id"/>
                <field name="course_id" />
            </tree>
        </field>
    </record>
    <!-- ENDING TREE VIEW -->

    <!-- DENINING SEARCH VIEW for courses-->
    <record model="ir.ui.view" id="course_search_view">
        <field name="name">course.search</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <search string="Course Search">
                <field name="name" string="Name Search"/>
                <field name="description" />
            </search>
        </field>
    </record>
    <!-- ENDING SEARCH VIEW -->


    <data>
        <!-- window action -->
        <!--
        The following tag is an action definition for a "window action",
        that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Courses</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first course
                </p>
            </field>
        </record>

        <!-- window action to proffesor -->
        <!--
        The following tag is an action definition for a "window action",
        that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="professor_list_action">
            <field name="name">Professors</field>
            <field name="res_model">openacademy.professor</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first professor
                </p>
            </field>
        </record>

         <!-- window action for SESSIONS-->
        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Sessions</field>
            <field name="res_model">openacademy.session</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
        </record>
        <!--ENDING WINDOWS ACTION-->

        <!-- top level menu: no parent -->
        <menuitem id="main_openacademy_menu" name="Open Academy"/>
       
         <!-- A first level in the left side menu is needed
        before using action= attribute -->
        <menuitem id="openacademy_menu" name="Open Academy"
                  parent="main_openacademy_menu"/>
        
       <!-- the following menuitem should appear *after*
        its parent openacademy_menu and *after* its
        action course_list_action -->
        <menuitem id="courses_menu" name="Courses" parent="openacademy_menu"
                  action="course_list_action"/>

        <!-- the following menuitem should appear *after*
        its parent openacademy_menu and *after* its
        action course_list_action -->
        <menuitem id="professor_menu" name="Professors" parent="openacademy_menu"
                  action="professor_list_action"/>
         <!-- Full id location:
        action="openacademy.course_list_action"
        It is not required when it is the same module -->

        <!--MENU SESSION-->
            <menuitem id="session_menu" name="Sessions"
                parent="openacademy_menu"
                action="session_list_action" />
        <!--ENDING MENU SESSION-->
    </data>
</odoo>